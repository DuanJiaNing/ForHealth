<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_marginBottom="10dp"
        >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/train_health_image"
            android:layout_width="160dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            />

        <View
            android:background="@color/white_d_d_d_d"
            android:id="@+id/train_health_top"
            android:layout_alignRight="@id/train_health_image"
            android:layout_alignBottom="@id/train_health_image"
            android:layout_alignLeft="@id/train_health_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            />
        <LinearLayout
            android:id="@+id/train_health_bottom"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:background="#10d1a1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/train_health_image"
            android:layout_alignStart="@id/train_health_image"
            android:layout_alignLeft="@id/train_health_image"
            android:layout_alignEnd="@id/train_health_image"
            android:layout_alignRight="@id/train_health_image"
            >

            <TextView
                android:id="@+id/train_health_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lines="1"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="@dimen/train_recycle_item_text"
                android:textStyle="bold"
                android:text="就爱 看楼"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/train_health_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:lines="1"
                android:text="阿斯 顿发"
                android:textColor="#dfdfdf"
                android:textSize="13sp"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>